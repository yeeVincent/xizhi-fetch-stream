{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/stream": ["apps/Stream/src"],
      "@repo/template": ["apps/Template/src"],
      "@microsoft/fetch-event-source": ["apps/Fetch-event-source/src"],
    },
    "outDir": "dist",
    "rootDir": ".",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["apps/**/*"]
}
